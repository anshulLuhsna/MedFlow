# MedFlow Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# API Security
# ============================================
# Comma-separated list of valid API keys
API_KEYS=dev-key-123,prod-key-456

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ============================================
# ML Core Configuration
# ============================================
# Groq API key for preference learning (Llama 3.3 70B)
GROQ_API_KEY=gsk_your_groq_api_key_here

# ============================================
# Optional: CORS Configuration
# ============================================
# Comma-separated list of allowed origins (defaults to localhost:3000,3001,8000)
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.com
